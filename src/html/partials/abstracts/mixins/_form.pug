- var application = [{name: 'application', id: 'formApplication', title : 'Заказать документ', application: true, button: 'Заказать документ', success: 'Ваша заявка отправлена'}] 
- var question = [{name: 'question', id: 'formQuestion', title : 'Задать вопрос', question: true,  button: 'Спросить', success: 'Ваш вопрос отправлен'}] 
- var call = [{name: 'call', id: 'formCall', title : 'Заказать звонок', call: true, button: 'Заказать звонок', success: 'Ваша заявка отправлена'}] 
- var review = [{name: 'review', id: 'formReview', title : 'Оставить отзыв', review: true, button: 'Оставить отзыв', success: 'Отзыв успешно оставлен'}] 


mixin form(items)
  each item in items
    +b.SECTION(class= 'form--' + item.name)
      +e.FORM.form(action='', method='', id= item.id)
        //- +e.A.close(href='#') Закрыть
        +e.H3.title #{item.title}
          
        if item.application
          .form-group.field-name.required
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
            p.help-block Ошибка заполнения поля формы
          .form-group.field-email.required
            +e.INPUT.input(type='email', name='Email', placeholder='Ваш e-mail*')
            p.help-block Ошибка заполнения поля формы
          .form-group.field-phone
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон')
            p.help-block Ошибка заполнения поля формы 
          .form-group.field-production.required
            +e.INPUT.input(type='text', name='Тип продукции', placeholder='Тип продукции*') 
            p.help-block Ошибка заполнения поля формы
          .form-group.field-doclist.required
            +e.TEXTAREA.textarea(type='text', name='Список документов', placeholder='Список документов*')
            p.help-block Ошибка заполнения поля формы

        if item.question
          .form-group.field-name.required
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
            p.help-block Ошибка заполнения поля формы
          .form-group.field-email.required
            +e.INPUT.input(type='email', name='Email', placeholder='Ваш e-mail*')
            p.help-block Ошибка заполнения поля формы
          .form-group.field-question.required
            +e.TEXTAREA.textarea(type='text', name='Ваш вопрос', placeholder='Ваш вопрос*')
            p.help-block Ошибка заполнения поля формы

        if item.call
          .form-group.field-name.required.has-error
            +e.INPUT.input(type='text', name='Имя', placeholder='Ваше имя*')
            p.help-block Ошибка заполнения поля формы
          .form-group.field-phone.required.has-success
            +e.INPUT.input(type='tel', name='Телефон', placeholder='Контактный телефон*')
            p.help-block Ошибка заполнения поля формы

        if item.review
          .form-group.field-name.required.has-error
            +e.INPUT.input(type='text', name='Компания', placeholder='Ваша компания*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.field-email.required.has-success
            +e.INPUT.input(type='email', name='Email', placeholder='Контактный e-mail*')
            p.help-block.help-block-error Ошибка заполнения поля формы
          .form-group.field-review.required
            +e.TEXTAREA.textarea(type='text', name='Ваш отзыв', placeholder='Ваш отзыв*')
            p.help-block.help-block-error Ошибка заполнения поля формы

        //- if !item.review    
